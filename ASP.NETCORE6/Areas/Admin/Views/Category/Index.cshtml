@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1 class=" text-center">Category Table</h1>
<hr />

<div class=" container p-4">
    <div class=" row p-3">
        <div class="col-6">
            Category
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-outline-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New</a>
        </div>
    </div>
   
        
    <table class=" table table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr class="">
                <th>NAME</th>
                <th>DisplayOrder </th>
                <th>CreatedDateTime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>@item.CreatedDateTime</td>
                    <td role="group">
                       <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.id" class="btn btn-outline-info"> <i class="bi bi-pencil-square"></i>Edit</a>
                       <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.id" class="btn btn-outline-danger">   <i class="bi bi-trash"></i> Delete</a>
                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>